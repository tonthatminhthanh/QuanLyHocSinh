@model QuanLyHocSinh.Models.HOCSINH

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa học sinh @Html.DisplayFor(model => model.HoHS) @Html.DisplayFor(model => model.TenHS)</h2>

<h3>Bạn có chắc là bạn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AnhHS)
        </dt>

        <dd>
            <img src="/Images/@Model.AnhHS" width="75" height="100" />
        </dd>
        <dt>
            Họ tên học sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoHS) @Html.DisplayFor(model => model.TenHS)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>

        <dd>
            @if (Model.GioiTinh)
            {
                <div>Nam</div>
            }
            else
            {
                <div>Nữ</div>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>

        <dd>
            @Model.NgaySinh.Day / @Model.NgaySinh.Month / @Model.NgaySinh.Year
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SDT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QueQuan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QueQuan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LOP.MaNganh)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOP.MaNganh)
        </dd>

        <dt>
            Họ tên phụ huynh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PHUHUYNH.HoPH) @Html.DisplayFor(model => model.PHUHUYNH.TenPH)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QUOCTICH.TenQuocTich)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QUOCTICH.TenQuocTich)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TONGIAO.TenTonGiao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TONGIAO.TenTonGiao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
