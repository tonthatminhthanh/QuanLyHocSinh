@model IEnumerable<QuanLyHocSinh.Models.NAMHOC>

@{
    ViewBag.Title = "Quản lý năm học";
    int i = 0;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Thêm năm học mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamBatDau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamKetThuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    i++;
    <tr>
        <td>@i</td>
        <td>
            @Html.DisplayFor(modelItem => item.NamBatDau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamKetThuc)
        </td>
        <td>
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNH })
        </td>
    </tr>
}

</table>
