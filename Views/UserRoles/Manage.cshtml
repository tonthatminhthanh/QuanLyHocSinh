@model QuanLyHocSinh.Models.RoleSelectionModel

<h2>Thông tin vai trò của @Model.user.email</h2>

@using (Html.BeginForm("Manage", "UserRoles", FormMethod.Post))
{
    @Html.HiddenFor(m => m.user.userId)
    @Html.HiddenFor(m => m.user.email)

    for (int i = 0; i < Model.user.roles.Count(); i++)
    {
        @Html.HiddenFor(m => m.user.roles[i])
    }

    for (int i = 0; i < Model.roles.Count(); i++)
    {
        @Html.HiddenFor(m => m.roles[i].RoleId);
        @Html.HiddenFor(m => m.roles[i].RoleName)
        @Model.roles[i].RoleName
        <input type="checkbox" name="roles[@i].selected" value="true" @(Model.roles[i].selected ? "checked" : "") />
    }
    <br />
    <input type="submit" class="btn btn-primary" value="Sửa đổi" />
}