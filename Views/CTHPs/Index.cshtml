@model IEnumerable<QuanLyHocSinh.Models.CTHP>

@{
    ViewBag.Title = "Danh sách các môn học của học sinh mã số " + ViewBag.MaHS;
    int stt = 0;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Thêm môn học", "Create", new {maHS = ViewBag.MaHS}, null)
</p>
<div style="color: red">
    @ViewBag.Error
</div>
<table class="table">
    <tr>
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model.MaCTHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MONHOC.TenMH)
        </th>
        <th>
            Họ tên giáo viên giảng dạy
        </th>
        <th>
            Năm học
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    stt++;
    <tr>
        <td>
            @stt
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaCTHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MONHOC.TenMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIAOVIEN.HoGV) @Html.DisplayFor(modelItem => item.GIAOVIEN.TenGV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NAMHOC.NamBatDau) - @Html.DisplayFor(modelItem => item.NAMHOC.NamKetThuc)
        </td>
        <td>
            @Html.ActionLink("Sửa đổi", "Edit", new { id = item.MaCTHP }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaCTHP })
        </td>
    </tr>
}
</table>
<div>
    @Html.ActionLink("Quay lại", "Index", "HOCSINHs")
</div>
